{
  "name": "@emoji-mart/monorepo",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:figma/emoji-mart.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "/packages/emoji-mart/dist",
    "/packages/emoji-mart-data/i18n",
    "/packages/emoji-mart-data/sets"
  ],
  "scripts": {
    "dev": "yarn workspace @emoji-mart/website dev",
    "build": "yarn workspace emoji-mart build",
    "build:data": "yarn workspace @emoji-mart/data build",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "prepare": "npm run build && npm run build:data"
  },
  "devDependencies": {
    "jest": "28.0.0",
    "jest-environment-jsdom": "28.0.0",
    "prettier": "2.5.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "engines": {
    "yarn": ">=1"
  }
}
